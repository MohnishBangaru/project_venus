# UI-Venus Mobile Crawler Environment Variables
# Copy this file to .env and customize the values for your setup

# =============================================================================
# PROJECT SETTINGS
# =============================================================================

# Project configuration
PROJECT_DEBUG=false
PROJECT_LOG_LEVEL=INFO
PROJECT_NAME="UI-Venus Mobile Crawler"
PROJECT_VERSION=1.0.0

# =============================================================================
# UI-VENUS MODEL CONFIGURATION
# =============================================================================

# Model settings
UI_VENUS_MODEL_NAME=ui-venus-7b
UI_VENUS_DEVICE=cuda
UI_VENUS_MAX_TOKENS=512
UI_VENUS_TEMPERATURE=0.1
UI_VENUS_TOP_P=0.9
UI_VENUS_TOP_K=50

# Performance settings
UI_VENUS_BATCH_SIZE=1
UI_VENUS_MAX_MEMORY_USAGE=0.8
UI_VENUS_USE_HALF_PRECISION=true

# Image processing
UI_VENUS_IMAGE_SIZE=1024,1024
UI_VENUS_IMAGE_FORMAT=RGB
UI_VENUS_NORMALIZE_IMAGES=true

# Model loading
UI_VENUS_TRUST_REMOTE_CODE=true
UI_VENUS_CACHE_DIR=

# API settings (if using remote UI-Venus)
UI_VENUS_API_ENDPOINT=
UI_VENUS_API_KEY=
UI_VENUS_TIMEOUT=30

# =============================================================================
# CRAWLER CONFIGURATION
# =============================================================================

# Crawling strategy
CRAWLER_STRATEGY=priority_based
CRAWLER_MAX_DEPTH=10
CRAWLER_MAX_ACTIONS=1000
CRAWLER_MAX_TIME_MINUTES=60

# Coverage settings
CRAWLER_COVERAGE_THRESHOLD=0.8
CRAWLER_REVISIT_THRESHOLD=3
CRAWLER_EXPLORATION_BONUS=2.0

# Action settings
CRAWLER_ACTION_DELAY_MS=1000
CRAWLER_SCREENSHOT_DELAY_MS=500
CRAWLER_RETRY_ATTEMPTS=3
CRAWLER_RETRY_DELAY_MS=2000

# Navigation settings
CRAWLER_ENABLE_BACKTRACKING=true
CRAWLER_ENABLE_SWIPE_NAVIGATION=true
CRAWLER_ENABLE_FORM_FILLING=false
CRAWLER_ENABLE_LONG_PRESS=true

# Swipe configuration
CRAWLER_SWIPE_DISTANCE=300
CRAWLER_SWIPE_DURATION_MS=300

# Output settings
CRAWLER_SAVE_SCREENSHOTS=true
CRAWLER_SAVE_ACTION_LOGS=true
CRAWLER_SAVE_UI_VENUS_RESPONSES=true
CRAWLER_OUTPUT_DIRECTORY=./crawl_results

# State management
CRAWLER_STATE_SIMILARITY_THRESHOLD=0.95
CRAWLER_MAX_STATE_HISTORY=100

# Performance settings
CRAWLER_PARALLEL_SCREENSHOT_PROCESSING=false
CRAWLER_MAX_CONCURRENT_ACTIONS=1

# =============================================================================
# DEVICE CONFIGURATION
# =============================================================================

# Device connection
DEVICE_DEVICE_ID=
DEVICE_ADB_HOST=localhost
DEVICE_ADB_PORT=5037
DEVICE_CONNECTION_TIMEOUT=30
DEVICE_AUTO_CONNECT=true

# Device settings
DEVICE_SCREEN_RESOLUTION=1080,1920
DEVICE_DPI=420
DEVICE_ORIENTATION=portrait
DEVICE_SCREEN_DENSITY=3.0

# Action settings
DEVICE_TOUCH_DURATION_MS=100
DEVICE_SWIPE_DURATION_MS=300
DEVICE_KEY_DELAY_MS=50
DEVICE_LONG_PRESS_DURATION_MS=1000

# Screenshot settings
DEVICE_SCREENSHOT_FORMAT=PNG
DEVICE_SCREENSHOT_QUALITY=95
DEVICE_COMPRESS_SCREENSHOTS=true
DEVICE_SCREENSHOT_SCALE=1.0

# App management
DEVICE_TARGET_PACKAGE=
DEVICE_LAUNCH_ACTIVITY=
DEVICE_CLEAR_APP_DATA=false
DEVICE_FORCE_STOP_APP=true
DEVICE_GRANT_PERMISSIONS=true

# Recovery settings
DEVICE_ENABLE_AUTO_RECOVERY=true
DEVICE_RECOVERY_ACTIONS=back,home,recent_apps,restart_app
DEVICE_MAX_RECOVERY_ATTEMPTS=3
DEVICE_RECOVERY_DELAY_MS=2000

# Performance settings
DEVICE_ENABLE_GESTURE_OPTIMIZATION=true
DEVICE_USE_HARDWARE_ACCELERATION=true
DEVICE_MAX_CONCURRENT_OPERATIONS=1

# Debug settings
DEVICE_ENABLE_DEBUG_LOGGING=false
DEVICE_SAVE_DEVICE_LOGS=true
DEVICE_LOG_LEVEL=INFO

# =============================================================================
# EXTERNAL API KEYS (if needed)
# =============================================================================

# OpenAI API (if using OpenAI models as fallback)
OPENAI_API_KEY=

# Hugging Face API (if using private models)
HUGGINGFACE_API_TOKEN=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Testing
PYTEST_CURRENT_TEST=
COVERAGE_RC_FILE=.coveragerc

# Pre-commit
PRE_COMMIT_HOME=

# =============================================================================
# RUNPOD SPECIFIC SETTINGS
# =============================================================================

# RunPod environment variables (if running on RunPod)
RUNPOD_POD_ID=
RUNPOD_API_KEY=
RUNPOD_ENDPOINT_ID=

# GPU settings for RunPod
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
